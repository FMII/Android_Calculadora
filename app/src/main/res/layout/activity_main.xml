<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solucion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/resultado"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="textEnd"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:background="@color/back"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="C"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                android:backgroundTint="@color/pink"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="("
                android:layout_margin="12dp"
                app:backgroundTint="@color/grey"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text=")"
                android:layout_margin="12dp"
                app:backgroundTint="@color/grey"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divisor"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="/"
                android:layout_margin="12dp"
                android:backgroundTint="#E91E63"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_siete"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="7"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ocho"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="8"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nueve"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="9"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multi"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="*"
                android:layout_margin="12dp"
                android:backgroundTint="#E91E63"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cuatro"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="4"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cinco"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="5"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_seis"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="6"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="-"
                android:layout_margin="12dp"
                android:backgroundTint="#E91E63"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_uno"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="1"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dos"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="2"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_tres"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="3"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_suma"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="+"
                android:layout_margin="12dp"
                android:backgroundTint="#E91E63"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="20dp"
                android:text="AC"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                android:backgroundTint="@color/pink"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cero"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="0"
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="."
                android:layout_margin="12dp"
                app:backgroundTint="@color/yellow"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_igual"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="36dp"
                android:text="="
                android:layout_margin="12dp"
                android:backgroundTint="#E91E63"
                />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>